#!/bin/sh

# Configure BEAM for production
export RELEASE_DISTRIBUTION=name
export RELEASE_NODE=<%= @release.name %>@${HOSTNAME}

# Set memory allocator
export ERL_AFLAGS="+MBas ageffcbf +MHas ageffcbf +MBlmbcs 512 +MHlmbcs 512 +MMmcs 10"

# Configure observer to work in production (for debugging)
export ERL_AFLAGS="$ERL_AFLAGS -kernel shell_history enabled"