{
  "name": "event-api-hono-service",
  "version": "1.0.0",
  "description": "Hono API service for event scraping and CRUD operations",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rm -rf dist && tsc",
    "build:check": "tsc --noEmit",
    "start": "node dist/index.js",
    "test": "vitest --config vitest.config.ts",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.7.2",
    "axios": "^1.11.0",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.0.0",
    "pg": "^8.16.3",
    "playwright": "^1.40.0",
    "postgres": "^3.4.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.4",
    "hono-rate-limiter": "^0.4.2",
    "dompurify": "^3.0.8",
    "jsdom": "^23.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.7",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
