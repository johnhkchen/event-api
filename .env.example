# Event API Environment Variables
# Copy this file to .env and fill in your values

# ======================
# DATABASE CONFIGURATION
# ======================

# Development Database
POSTGRES_DB=event_api_dev
POSTGRES_USER=event_api
POSTGRES_PASSWORD=development_password
DB_PORT=5432

# Production Database (set via Coolify UI in production)
# DATABASE_URL=postgresql://user:pass@database:5432/event_api_production

# Staging Database
# STAGING_DATABASE_URL=postgresql://user:pass@staging-database:5432/event_api_staging
# STAGING_DB_PORT=5433

# ======================
# SERVICE CONFIGURATION
# ======================

# Environment Settings
NODE_ENV=development
MIX_ENV=dev
PORT=3000
ELIXIR_PORT=4000
BAML_PORT=8080

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# ======================
# AI/LLM SERVICES
# ======================

# OpenAI API Key for AI processing
OPENAI_API_KEY=sk-your-openai-key-here

# Staging OpenAI API Key (optional - use different key for staging)
# STAGING_OPENAI_API_KEY=sk-your-staging-openai-key-here

# ======================
# INTERNAL SERVICE URLS
# ======================

# Service communication URLs (usually localhost in containerized environment)
HONO_API_URL=http://localhost:3000
ELIXIR_SERVICE_URL=http://localhost:4000
BAML_SERVICE_URL=http://localhost:8080

# ======================
# STAGING-SPECIFIC
# ======================

# Enable debug features in staging (true/false)
# ENABLE_DEBUG_ENDPOINTS=true
# DISABLE_RATE_LIMITING=true
# MOCK_EXTERNAL_SERVICES=false

# ======================
# DEPLOYMENT
# ======================

# Docker image tag for deployment (set via CI/CD)
# IMAGE_TAG=latest